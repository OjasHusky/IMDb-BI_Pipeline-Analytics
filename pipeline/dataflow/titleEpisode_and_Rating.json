{
	"name": "titleEpisode_and_Rating",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "titleEpisode",
						"type": "DatasetReference"
					},
					"name": "titleEpisode"
				},
				{
					"dataset": {
						"referenceName": "titleRating",
						"type": "DatasetReference"
					},
					"name": "titleRating"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SnowflaketitleEpisode",
						"type": "DatasetReference"
					},
					"name": "sink1"
				},
				{
					"dataset": {
						"referenceName": "SnowflakeTitleRating",
						"type": "DatasetReference"
					},
					"name": "sink2"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          tconst as string,",
				"          parentTconst as string,",
				"          seasonNumber as string,",
				"          episodeNumber as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> titleEpisode",
				"source(output(",
				"          tconst as string,",
				"          averageRating as string,",
				"          numVotes as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> titleRating",
				"titleEpisode derive(Season_Episode = iif(seasonNumber == '-1' && episodeNumber == '-1', '0', \r",
				"    concat('S', lpad(toString(seasonNumber), 2, '0'), 'E', lpad(toString(episodeNumber), 2, '0'))\r",
				")\r",
				") ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          TCONST as string,",
				"          PARENTTCONST as string,",
				"          SEASONNUMBER as decimal(38,0),",
				"          EPISODENUMBER as decimal(38,0)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     stageInsert: true,",
				"     mapColumn(",
				"          TCONST = tconst,",
				"          PARENTTCONST = parentTconst,",
				"          SEASONNUMBER = seasonNumber,",
				"          EPISODENUMBER = episodeNumber",
				"     )) ~> sink1",
				"titleRating sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          TCONST as string,",
				"          AVERAGERATING as double,",
				"          NUMVOTES as decimal(38,0)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     stageInsert: true,",
				"     mapColumn(",
				"          TCONST = tconst,",
				"          AVERAGERATING = averageRating,",
				"          NUMVOTES = numVotes",
				"     )) ~> sink2"
			]
		}
	}
}